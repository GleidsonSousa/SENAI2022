package exercicios;

import java.util.Scanner;

public class Ex_1 {
public static Scanner sc =  new Scanner (System.in);
	public static void main(String[] args) {
		int [] n = new int [10];
		System.out.println("Digite 10 números inteiros.");
		n [0]=  sc.nextInt();
		n [1]=  sc.nextInt();
		n [2]=  sc.nextInt();
		n [3]=  sc.nextInt();
		n [4]=  sc.nextInt();
		n [5]=  sc.nextInt();
		n [6]=  sc.nextInt();
		n [7]=  sc.nextInt();
		n [8]=  sc.nextInt();
		n [9]=  sc.nextInt();
		
		
		System.out.println("\nNúmeros na ordem normal:\n");
		
		for (int i = 0; i < n.length; i++) {
			System.out.print(n[i] + " ");
			System.out.print("");
		}
		
		System.out.println("\n Na ordem inversa:\n");
		
		for (int i = n.length - 1; i >= 0 ; i--) {
			System.out.print(n[i] + " ");
		}

	}

}
