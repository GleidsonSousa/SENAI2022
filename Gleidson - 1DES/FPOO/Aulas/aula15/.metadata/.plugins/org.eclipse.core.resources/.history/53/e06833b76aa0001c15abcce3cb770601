package exercicios;

import java.io.IOException;
import java.util.Scanner;

public class Ex_5 {

	
		public static Scanner scan =  new Scanner (System.in);
		public static void main(String[] args) throws IOException{
			int [] a = new int [10];
			System.out.println("Digite 20 números inteiros.");
			a [0]=  scan.nextInt();
			a [1]=  scan.nextInt();
			a [2]=  scan.nextInt();
			a [3]=  scan.nextInt();
			a [4]=  scan.nextInt();
			a [5]=  scan.nextInt();
			a [6]=  scan.nextInt();
			a [7]=  scan.nextInt();
			a [8]=  scan.nextInt();
			a [9]=  scan.nextInt();
			int [] b = new int [10];
			b [0]=  scan.nextInt();
			b [1]=  scan.nextInt();
			b [2]=  scan.nextInt();
			b [3]=  scan.nextInt();
			b [4]=  scan.nextInt();
			b [5]=  scan.nextInt();
			b [6]=  scan.nextInt();
			b [7]=  scan.nextInt();
			b [8]=  scan.nextInt();
			b [9]=  scan.nextInt();
			
			int [] dif = new int [10];
			dif [0]=  a[0] - b [0];
			dif	[1]=  a[1] - b [1];
			dif	[2]=  a[2] - b [2];
			dif	[3]=  a[3] - b [3];
			dif	[4]=  a[4] - b [4];
			dif	[5]=  a[5] - b [5];
			dif	[6]=  a[6] - b [6];
			dif	[7]=  a[7] - b [7];
			dif	[8]=  a[8] - b [8];
			dif	[9]=  a[9] - b [9];
			System.out.println("A diferença de digitos entre os números digitados é:");
			System.out.println(a[0]+"e\t"+ b[0]+"="+dif[0]+"Digitos."+"\t"+a[1]+"e\t"+ b[1]+"="+dif[1]+"Digitos."+"\t"+a[2]+"e\t"+ b[2]+"="+dif[2]+"Digitos."+"\t");
			System.out.println(a[3]+"e\t"+ b[3]+"="+dif[3]+"Digitos."+"\t"+a[4]+"e\t"+ b[4]+"="+dif[4]+"Digitos."+"\t"+a[5]+"e\t"+ b[5]+"="+dif[5]+"Digitos."+"\t");
			System.out.println(a[8]+"e\t"+ b[8]+"="+dif[8]+"Digitos."+"\t"+a[8]+"e\t"+ b[8]+"="+dif[8]+"Digitos."+"\t"+a[8]+"e\t"+ b[8]+"="+dif[8]+"Digitos."+"\t");
			System.out.println(a[9]+"e\t"+ b[9]+"="+dif[9]+"Digitos");
			
			 }    
		}


